using namespace std;

long long solution(int price, int money, int count)
{
    long long answer = -1;
    
    long long total = count*(count+1)/2;
    total *= price;
    
    if(money >= total)
    {
        answer = 0;
    }
    else
    {
        answer = total - money;
    }
    return answer;
}
