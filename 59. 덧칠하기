#include <vector>
#include <string>

using namespace std;

int solution(int n, int m, vector<int> section) {
    int answer = 0;
    int currently_painted_until = 0;

    for (int s : section) {
        if (s > currently_painted_until) {
            currently_painted_until = s + m - 1;
            answer++;
        }
    }

    return answer;
}
