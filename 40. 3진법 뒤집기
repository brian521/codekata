#include <string>
#include <vector>
#include <cmath>

using namespace std;

int solution(int n) {
    int answer = 0;
    int temp = n;
    vector<int> v;
    
    while(temp != 0)
    {
        v.push_back(temp%3);
        temp /= 3;
    }
    
    for(int i = v.size()-1; i >= 0; i--)
    {
        answer += v[i]*pow(3, v.size()-i-1);
    }
    
    return answer;
}
